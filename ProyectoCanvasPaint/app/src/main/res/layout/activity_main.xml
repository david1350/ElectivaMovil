<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.uptc.proyectocanvaspaint.MainActivity"
    android:rowCount="3"
    android:orientation="vertical">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorGreen"
            android:columnCount="5"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/gridLayout">

            <Button
                android:id="@+id/buttonPencil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_background"
                android:focusable="auto"
                android:drawableRight="@drawable/pencil" />

            <Button
                android:id="@+id/buttonLine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_background"
                android:drawableRight="@drawable/line" />

            <Button
                android:id="@+id/buttonSquare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_background"
                android:drawableLeft="@drawable/square" />

            <Button
                android:id="@+id/buttonOval"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_background"
                android:drawableLeft="@drawable/oval" />

            <Button
                android:id="@+id/buttonEraser"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/button_background"
                android:drawableLeft="@drawable/eraser" />
        </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gridLayout"
        android:background="@color/colorSilver"
        android:padding="10dp">

        <co.edu.uptc.proyectocanvaspaint.CanvasClass
            android:id="@+id/canvasClass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:padding="10dp" />

    </GridLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorGreen"
        android:columnCount="6"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/buttonBote"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:drawableLeft="@drawable/bote" />

        <Button
            android:id="@+id/colorBlue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:background="#0000FF"
            android:tag="#0000FF"
            android:gravity="center"
            android:padding="10dp" />

        <Button
            android:id="@+id/colorRed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:background="#FF0000"
            android:gravity="center"
            android:padding="10dp"
            android:tag="#FF0000" />

        <Button
            android:id="@+id/colorYellow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFFF00"
            android:gravity="center"
            android:padding="10dp"
            android:tag="#FFFF00" />

        <Button
            android:id="@+id/colorBlack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="#000000"
            android:gravity="center"
            android:padding="10dp"
            android:tag="#000000" />

        <Button
            android:id="@+id/colorWhite"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:padding="10dp"
            android:tag="#FFFFFF" />

    </GridLayout>





</RelativeLayout>
