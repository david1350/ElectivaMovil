<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.uptc.swiftservicecliente">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WEAD_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/menus"
        android:label="@string/app_name"
        android:roundIcon="@drawable/menus"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreem"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QR"
            android:label="@string/title_activity_qr"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".MainActivityCliente"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="screenSize|orientation"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="screenSize|orientation">></activity>

        <activity android:name=".fragments.administrador.LoginAcitvity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>


    </application>

</manifest>