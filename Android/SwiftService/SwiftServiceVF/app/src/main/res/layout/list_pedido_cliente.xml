<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idLayoutRegistrarCliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollIndicators="end"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbars="horizontal"
    tools:context="co.edu.uptc.swiftservicecliente.fragments.cliente.InicioFragmentCliente">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:hint="ORDEN "
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/campoFechaCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint="FECHA: "
                        android:inputType="text"
                        android:textSize="20dp"/>
                </LinearLayout>



                <TextView
                    android:id="@+id/campoMesaCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="MESA: "
                    android:inputType="text"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/campoObservacionestituloCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="OBSERVACIONES: "
                    android:inputType="text"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/campoObservacionesCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:textSize="20dp"/>


                <TextView
                    android:id="@+id/viewEliminarCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="4"
                    android:hint="Seleccione Producto a eliminar"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:textStyle="bold|italic" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/idRecyclerViewPedidoCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"/>


                <TextView
                    android:id="@+id/campoCostoTotalCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="$"
                    android:layout_gravity="right"
                    android:textSize="20dp" />

            </LinearLayout>


            <Button
                android:id="@+id/btnEnviarOrdenCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorPrimary"
                android:text="Enviar Orden"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
